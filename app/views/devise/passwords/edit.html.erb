<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :password, "New password", class: 'col-form-label' %>
    </div>  
    <div class="col-sm-10">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :password_confirmation, "Confirm new password", class: 'col-form-label' %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>  
  </div>

  <div class="actions form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="form-group row">
  <div class="col-sm-10 offset-sm-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
